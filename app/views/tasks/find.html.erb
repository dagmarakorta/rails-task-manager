<h1><%= @task.title %></h1>

<p><%= @task.details %>
<% if @task.completed %>
  [X]</p>
<% else %>
  [ ]</p>
<% end %>
<p><%= link_to "Edit task", edit_path(@task.id) %></p>
<p><%= link_to "Delete task",   task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>

<p><%= link_to "Back to list", tasks_path %></p>
