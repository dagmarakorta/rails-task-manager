<h1>My tasks</h1>
<ul class="list-inline">
  <% @tasks.each do |task| %>
  <li>
    <%= link_to task.title, task_path(task.id) %> -- <%= link_to "Delete task", task_path(task.id),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </li>
  <% end %>
</ul>
<div><%= link_to "+ Add new task", new_path %></div>
